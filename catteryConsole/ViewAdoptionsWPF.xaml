<Window x:Class="catteryConsole.ViewAdoptionsWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Adozioni" Height="500" Width="800">
    <Grid>
        <ListView Name="lvAdoptions" Margin="10" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Gatto" DisplayMemberBinding="{Binding AdoptionCat.Name}" Width="120"/>
                    <GridViewColumn Header="Adottante" DisplayMemberBinding="{Binding AdoptionAdopter.Name}" Width="120"/>
                    <GridViewColumn Header="Cognome" DisplayMemberBinding="{Binding AdoptionAdopter.Surname}" Width="120"/>
                    <GridViewColumn Header="Data Adozione" DisplayMemberBinding="{Binding AdoptionDate}" Width="120"/>
                    <GridViewColumn Header="Data Uscita" DisplayMemberBinding="{Binding AdoptionCat.LeftCattery}" Width="120"/>
                    <GridViewColumn Header="Azioni" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Revoca" Click="BtnRefund_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
