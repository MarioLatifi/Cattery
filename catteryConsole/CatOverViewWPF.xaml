<Window x:Class="catteryConsole.CatOverViewWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cat Overview" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Labels for Cat Information -->
        <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10">
            <Label x:Name="lblName" FontSize="16" FontWeight="Bold"/>
            <Label x:Name="lblAge" FontSize="14"/>
            <Label x:Name="lblBreed" FontSize="14"/>
            <Label x:Name="lblBirth" FontSize="14"/>
            <Label x:Name="lblArrived" FontSize="14"/>
            <Label x:Name="lblLeft" FontSize="14"/>
        </StackPanel>

        <!-- Description TextBox -->
        <TextBox x:Name="lblDescription" Grid.Row="1" Grid.Column="0" Margin="10"
                 TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <!-- Cat Photo -->
        <Image x:Name="imgCatPhoto" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
               Margin="10" Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
               Width="Auto" Height="Auto" />

        <!-- Button Adotta Ora -->
        <Button x:Name="btnAdopt" Content="Adotta Ora" Grid.Row="1" Grid.Column="1"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Width="100" Click="btnAdoptNow_Click"/>
    </Grid>
</Window>

    