<Window x:Class="catteryConsole.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="475" Width="722" WindowStartupLocation="CenterScreen" Background="#F5F5F5">
    <Border x:Name="BackGroundLogin" CornerRadius="10" Background="White" Padding="20" Margin="10" BorderBrush="#DDD" BorderThickness="1">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Login Adottante" FontSize="22" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20" TextAlignment="Center"/>
            
            <TextBlock Text="Nome" Margin="0,5,0,0" Foreground="#666"/>
            <TextBox x:Name="txtName" Margin="0,2,0,10" Height="28" FontSize="14"/>

            <TextBlock Text="Cognome" Margin="0,5,0,0" Foreground="#666"/>
            <TextBox x:Name="txtSurname" Margin="0,2,0,10" Height="28" FontSize="14"/>

            <TextBlock Text="Indirizzo" Margin="0,5,0,0" Foreground="#666"/>
            <TextBox x:Name="txtAddress" Margin="0,2,0,10" Height="28" FontSize="14"/>

            <TextBlock Text="Cellulare" Margin="0,5,0,0" Foreground="#666"/>
            <TextBox x:Name="txtCel" Margin="0,2,0,20" Height="28" FontSize="14"/>

            <Button x:Name="btnLogin" Content="Login" Height="35" FontSize="16" Background="#4CAF50" Foreground="White" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Border>
</Window>
